<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/tipAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_placeholder"
                android:padding="4dp"
                android:background="@drawable/circle_bg" />

            <!-- User and date info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tipUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted by: User"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tipDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 25, 2024"
                    android:textSize="12sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tip content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tipTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eco-Friendly Waste Management"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4CAF50" />

            <!-- Description -->
            <TextView
                android:id="@+id/tipDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Separate your trash into recyclables and non-recyclables to help reduce landfill waste and protect the environment."
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView> 